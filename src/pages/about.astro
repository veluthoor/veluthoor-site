---
import Layout from '../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

const pages = await getCollection('pages');
const aboutPage = pages.find(p => p.id === 'about');

const { Content } = aboutPage ? await render(aboutPage) : { Content: null };
---

<Layout title="About">
  <style>
    .about-content {
      font-family: var(--font-serif);
      font-size: 1rem;
      line-height: 1.8;
    }

    .about-content :global(h1),
    .about-content :global(h2) {
      font-family: var(--font);
      font-weight: 600;
      letter-spacing: -0.01em;
      margin: 2rem 0 0.75rem;
    }

    .about-content :global(h1) { font-size: 1.5rem; }
    .about-content :global(h2) { font-size: 1.2rem; }

    .about-content :global(p) { margin-bottom: 1.3rem; }

    .about-content :global(ul),
    .about-content :global(ol) {
      padding-left: 1.5rem;
      margin-bottom: 1.3rem;
    }

    .about-content :global(li) { margin-bottom: 0.3rem; }

    .about-content :global(a) { color: var(--accent); }

    .about-content :global(img) {
      max-width: 100%;
      border-radius: 4px;
      margin: 1.5rem 0;
    }

    .page-title {
      font-size: 1.8rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      margin-bottom: 2rem;
    }
  </style>

  <h1 class="page-title">About</h1>
  <div class="about-content">
    {Content ? <Content /> : <p>About page coming soon.</p>}
  </div>
</Layout>
